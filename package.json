{
  "name": "cypress-parcel-preprocessor",
  "description": "Cypress preprocessor for bundling JavaScript via Parcel",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/cypress-parcel-preprocessor/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run unused-deps",
        "echo disabled npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "src/*.js",
    "!src/*spec.js"
  ],
  "homepage": "https://github.com/bahmutov/cypress-parcel-preprocessor#readme",
  "keywords": [
    "cypress",
    "cypress-io",
    "parcel",
    "parcel-bundler",
    "preprocessor"
  ],
  "license": "MIT",
  "main": "src/",
  "private": false,
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/cypress-parcel-preprocessor.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok --allow-duplicate parcel-bundler && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "preunit": "rm -rf dist",
    "unit": "mocha src/*spec.js",
    "unused-deps": "dependency-check --unused --no-dev .",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "break",
          "release": "major"
        }
      ]
    }
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.2",
    "check-more-types": "2.24.0",
    "cypress": "3.0.1",
    "dependency-check": "3.1.0",
    "deps-ok": "1.4.1",
    "git-issues": "1.3.1",
    "lazy-ass": "1.6.0",
    "license-checker": "20.0.0",
    "mocha": "5.2.0",
    "nsp": "3.2.1",
    "pre-git": "3.17.1",
    "prettier-standard": "8.0.1",
    "semantic-release": "^15.5.2",
    "standard": "11.0.1",
    "travis-deploy-once": "5.0.0",
    "parcel-bundler": "1.12.3"
  },
  "dependencies": {
    "debug": "3.1.0"
  },
  "peerDependencies": {
    "parcel-bundler": "1.12.3"
  }
}
